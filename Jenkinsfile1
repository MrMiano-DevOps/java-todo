pipeline {
    agent any
    tools {
        gradle "Gradle 6.0"
    }
    stages {
        stage ('clone repository') {
            steps {
                sh 'git pull https://github.com/MrMiano-DevOps/java-todo.git'
            }
        }
        
        stage ('build') {
            steps {
                sh 'gradle build'
            }
        }
        
        stage ('test') {
            steps {
                sh 'gradle test'
            }
        }
    }
}
